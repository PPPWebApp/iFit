{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "foods": {
      ".indexOn": "group",
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "recipes": {
      ".indexOn": "name",
      "$user_id": {
        ".write": "$user_id === auth.uid"
      }
    },
    "fitness": {
      "$user_id": {
        ".read": "$user_id === auth.uid",
        ".write": "$user_id === auth.uid"
      }
    }
  }
}